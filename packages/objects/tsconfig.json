{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018"
  },
  "include": ["src/**/*", "src/type.d.ts", "../types/src/jsx.d.ts", "../objects/src/interfaces", "../objects/src/graph", "../objects/src/index.ts"],
  "exclude": ["node_modules", "dist"]
}