{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "root": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "arguments": {
          "type": "array"
        },
        "options": {
          "type": "object"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/properties/root"
          }
        },
        "animations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "parameters": {
                "type": "object"
              },
              "custom": {
                "type": "string"
              },
              "target": {
                "type": "string"
              }
            }
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "handle": {
                "type": "string"
              },
              "to": true,
              "elapsed": {
                "type": "number"
              },
              "arguments": {
                "type": "array"
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "root"
  ]
}
